<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/digital_world"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_user"
                    style="@style/MyTextView"
                    android:textSize="30dp"/>

                <EditText
                    android:id="@+id/edt_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_user_person"
                    android:inputType="textEmailAddress"
                    android:hint="correo@domain.com"
                    android:layout_marginBottom="5dp"
                    style="@style/MyEditText"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_password"
                    style="@style/MyTextView"
                    android:textSize="30dp"/>

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_password_lock"
                    android:inputType="textPassword"
                    android:hint="xxxxxx"
                    android:layout_marginBottom="10dp"
                    style="@style/MyEditText"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_login"
                    android:textSize="30dp"
                    android:background="@drawable/campo_redondeado"
                    android:layout_marginBottom="5dp"/>

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_sign_up"
                    android:textSize="30dp"
                    android:background="@drawable/campo_redondeado" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>