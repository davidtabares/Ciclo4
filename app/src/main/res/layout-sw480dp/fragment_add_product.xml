<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/txt_product_name"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/edt_product_name"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="@string/txt_product_name_hint"
                android:textSize="15dp"
                android:inputType="textAutoCorrect" />


            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_product_category"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/edt_product_category"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="@string/txt_product_category_hint"
                android:textSize="15dp"
                android:inputType="textAutoCorrect" />

            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_product_value"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/edt_product_value"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="@string/txt_product_value_hint"
                android:textSize="15dp"
                android:inputType="number" />

            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_product_description"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/edt_product_description"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="@string/txt_product_description_hint"
                android:textSize="15dp"
                android:inputType="textLongMessage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chb_product_instock"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:buttonTint="#009E0F" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MyTextView"
                    android:text="@string/txt_product_instock"
                    android:textSize="25dp" />

            </LinearLayout>

            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_product_image"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/btn_product_image_select"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:background="@drawable/campo_redondeado"
                    android:drawableBottom="@drawable/ic_product_image_search" />

                <Button
                    android:id="@+id/btn_product_image_upload"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/campo_redondeado"
                    android:drawableBottom="@drawable/ic_product_image_upload" />

                <Button
                    android:id="@+id/btn_product_image_take"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:background="@drawable/campo_redondeado"
                    android:drawableBottom="@drawable/ic_product_image_take" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imv_product_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_default_image" />

            <!--            <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/editTextPlace"
                                style="@style/MyEditText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:hint="@string/txt_product_place_hint" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/campo_redondeado"
                                android:text="@string/txt_product_place" />
                        </LinearLayout>-->

            <Button
                android:id="@+id/btn_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/campo_redondeado"
                android:layout_marginBottom="5dp"
                android:text="@string/txt_btn_add_product"
                android:textSize="15dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


