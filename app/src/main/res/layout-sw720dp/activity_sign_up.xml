<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/digital_world"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_first_name"
                android:layout_marginTop="10dp"
                style="@style/MyTextView"
                android:textSize="35dp"/>

            <EditText
                android:id="@+id/edt_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="@string/etxt_first_name"
                style="@style/MyEditText"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_last_name"
                style="@style/MyTextView"
                android:textSize="35dp"/>

            <EditText
                android:id="@+id/edt_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="@string/etxt_last_name"
                style="@style/MyEditText"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_email"
                style="@style/MyTextView"
                android:textSize="35dp"/>

            <EditText
                android:id="@+id/edt_email_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress"
                android:hint="@string/etxt_email"
                style="@style/MyEditText"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_password"
                style="@style/MyTextView"
                android:textSize="35dp"/>

            <EditText
                android:id="@+id/edt_password_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword"
                android:hint="@string/etxt_password_sign_up"
                style="@style/MyEditText"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/chb_terms"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:buttonTint="#009E0F" />

                <TextView
                    android:id="@+id/textView_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MyTextView"
                    android:text="@string/txt_terms"
                    android:textSize="35dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_user_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/txt_user_registration"
                android:textSize="25dp"
                android:background="@drawable/campo_redondeado" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>